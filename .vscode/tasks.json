    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "cmake",
            "command": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Qt Designer",
            "type": "shell",
            "command": "/usr/lib/x86_64-linux-gnu/qt5/bin/designer",
            "args": [
                "${file}"
            ]
        },
    ]
}